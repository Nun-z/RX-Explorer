<Page x:Class="RX_Explorer.SearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:RX_Explorer.Class"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
      xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
      xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:Behaviors="using:Microsoft.Toolkit.Uwp.UI.Behaviors"
      mc:Ignorable="d"
      NavigationCacheMode="Enabled"
      Background="Transparent">
    <Page.Resources>
        <muxc:CommandBarFlyout x:Name="SearchCommandFlyout"
                               Placement="RightEdgeAlignedTop">
            <muxc:CommandBarFlyout.SecondaryCommands>
                <AppBarButton x:Uid="SearchLocation"
                              x:Name="Location"
                              Label="打开所在位置"
                              MinWidth="180"
                              Click="Location_Click">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets"
                                  Glyph="&#xF133;" />
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton Icon="Copy"
                              x:Name="CopyPath"
                              Label="复制完整路径"
                              MinWidth="180"
                              x:Uid="SearchCopyPath"
                              Click="CopyPath_Click" />
                <AppBarButton Icon="Tag"
                              x:Uid="SearchProperties"
                              Label="属性"
                              MinWidth="180"
                              Click="Attribute_Click" />
            </muxc:CommandBarFlyout.SecondaryCommands>
        </muxc:CommandBarFlyout>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Text="搜索结果"
                   x:Uid="SearchResult"
                   FontSize="16" 
                   VerticalAlignment="Center"
                   Padding="10,0,10,0"/>
        <ListView Grid.Row="1"
                  Name="SearchResultList"
                  x:FieldModifier="public"
                  Grid.RowSpan="2"
                  IsHoldingEnabled="True"
                  ShowsScrollingPlaceholders="False"
                  ContainerContentChanging="SearchResultList_ContainerContentChanging"
                  Holding="SearchResultList_Holding"
                  RightTapped="SearchResultList_RightTapped">
            <Interactivity:Interaction.Behaviors>
                <Behaviors:StickyHeaderBehavior />
            </Interactivity:Interaction.Behaviors>
            <ListView.Header>
                <Grid Height="35">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1.5*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button HorizontalContentAlignment="Left"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            x:Name="ListHeaderName"
                            Click="ListHeaderName_Click"
                            Background="{StaticResource ElementAcrylicBrush}"
                            Style="{StaticResource ListHeaderButtonStyle}">
                        <TextBlock Text="名称"
                                   FontSize="14"
                                   x:Uid="SearchName"
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis" />
                    </Button>
                    <Button HorizontalContentAlignment="Left"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Grid.Column="1"
                            x:Name="ListHeaderPath"
                            Click="ListHeaderPath_Click"
                            Background="{StaticResource ElementAcrylicBrush}"
                            Style="{StaticResource ListHeaderButtonStyle}">
                        <TextBlock Text="路径"
                                   FontSize="14"
                                   x:Uid="SearchPath"
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis" />
                    </Button>
                    <Button HorizontalContentAlignment="Left"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Grid.Column="2"
                            x:Name="ListHeaderModifyDate"
                            Click="ListHeaderModifyDate_Click"
                            Background="{StaticResource ElementAcrylicBrush}"
                            Style="{StaticResource ListHeaderButtonStyle}">
                        <TextBlock Text="修改日期"
                                   FontSize="14"
                                   x:Uid="SearchModified"
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis" />
                    </Button>
                    <Button HorizontalContentAlignment="Left"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Grid.Column="3"
                            x:Name="ListHeaderType"
                            Click="ListHeaderType_Click"
                            Background="{StaticResource ElementAcrylicBrush}"
                            Style="{StaticResource ListHeaderButtonStyle}">
                        <TextBlock Text="类型"
                                   FontSize="14"
                                   x:Uid="SearchType"
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis" />
                    </Button>
                    <Button HorizontalContentAlignment="Left"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Grid.Column="4"
                            x:Name="ListHeaderSize"
                            Click="ListHeaderSize_Click"
                            Background="{StaticResource ElementAcrylicBrush}"
                            Style="{StaticResource ListHeaderButtonStyle}">
                        <TextBlock Text="大小"
                                   FontSize="14"
                                   x:Uid="SearchSize"
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis" />
                    </Button>
                </Grid>
            </ListView.Header>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment"
                            Value="Stretch" />
                    <Setter Property="Padding"
                            Value="0" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:FileSystemStorageItemBase">
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="1.5*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="44" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Stretch="Uniform"
                                   Source="{x:Bind Thumbnail,Mode=OneWay}"
                                   x:Phase="1"
                                   Height="30"
                                   Width="30" />
                            <TextBlock VerticalAlignment="Center"
                                       FontSize="14"
                                       Grid.Column="1"
                                       Text="{x:Bind Name}"
                                       x:Phase="0"
                                       ToolTipService.ToolTip="{x:Bind Name}"
                                       TextTrimming="CharacterEllipsis" />
                        </Grid>
                        <TextBlock VerticalAlignment="Center"
                                   FontSize="14"
                                   Text="{x:Bind Path}"
                                   x:Phase="0"
                                   Padding="10,0,0,0"
                                   ToolTipService.ToolTip="{x:Bind Path}"
                                   TextTrimming="CharacterEllipsis"
                                   Grid.Column="1" />
                        <TextBlock VerticalAlignment="Center"
                                   FontSize="14"
                                   x:Phase="0"
                                   Padding="10,0,0,0"
                                   Text="{x:Bind ModifiedTime}"
                                   ToolTipService.ToolTip="{x:Bind ModifiedTime}"
                                   Grid.Column="2"
                                   TextTrimming="CharacterEllipsis" />
                        <TextBlock VerticalAlignment="Center"
                                   FontSize="14"
                                   Padding="10,0,0,0"
                                   x:Phase="1"
                                   Text="{x:Bind DisplayType,Mode=OneWay}"
                                   ToolTipService.ToolTip="{x:Bind DisplayType,Mode=OneWay}"
                                   Grid.Column="3"
                                   TextTrimming="CharacterEllipsis" />
                        <TextBlock VerticalAlignment="Center"
                                   FontSize="14"
                                   Padding="10,0,0,0"
                                   Text="{x:Bind Size}"
                                   x:Phase="0"
                                   ToolTipService.ToolTip="{x:Bind Size}"
                                   TextTrimming="CharacterEllipsis"
                                   Grid.Column="4" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBlock Name="HasItem"
                   Visibility="Collapsed"
                   x:Uid="SearchHasItem"
                   Text="无法搜索到任何文件"
                   Grid.Row="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="15" />

        <controls:Loading x:Name="LoadingControl"
                          IsLoading="False"
                          Grid.RowSpan="2">
            <controls:Loading.Background>
                <SolidColorBrush Color="Black"
                                 Opacity="0.65" />
            </controls:Loading.Background>
            <StackPanel>
                <TextBlock FontSize="15"
                           x:Uid="SearchingText"
                           Text="正在搜索..."
                           VerticalAlignment="Center"
                           TextAlignment="Center" />
                <muxc:ProgressBar IsIndeterminate="True"
                                  Width="180"
                                  Margin="0,10,0,0" />
            </StackPanel>
        </controls:Loading>
    </Grid>
</Page>
